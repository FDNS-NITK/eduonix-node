extends layout

block content
  if posts
    div.posts
      each post, i in posts
        .post
          h1
            a(href="/posts/show/#{post._id}")= post.title
          p.meta Posted in 
            a(href="/categories/show/#{post.category}") #{post.category} 
            | by #{post.author} 
            | on #{moment(post.dat).format("MM-DD-YYYY")}
          img(src="/#{post.mainimage}")
          != truncateText(post.body, 350) + " . . ."
          a.more(href="/posts/show/#{post._id}") Read More
